  author = {Friesen, Maren L. and Cordeiro, Matilde A. and Penmetsa, R. Varma and Badri, Mounawer and Huguet, Thierry and Aouani, Mohamed E. and Cook, Douglas R. and Nuzhdin, Sergey V.},
