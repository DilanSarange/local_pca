  doi = {10.1111/j.1365-313X.2010.04267.x},
  interhash = {d133cc686c8326c0ef267e71d082e48b},
  intrahash = {ab752502e580e00bc5575d9a31d4b3f2},
  issn = {1365-313X},
  journal = {The Plant Journal},
  keywords = {Medicago local_adaptation population_genomics},
