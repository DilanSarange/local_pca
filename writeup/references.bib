  pages = {623--635},
  publisher = {Blackwell Publishing Ltd},
  timestamp = {2013-01-23T09:45:41.000+0100},
  title = {Population genomic analysis of {Tunisian} {\it Medicago truncatula} reveals candidates for local adaptation},
